<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_selected="false">
    <!--butona basilmadiginda-->
    <layer-list>
      <item>
        <shape>
          <gradient android:angle="270" android:startColor="@android:color/white" android:endColor="@android:color/white"></gradient>
          <stroke android:width="1dp" android:color="#dfe6e9"></stroke>
          <corners android:radius="5dp"></corners>
        </shape>
      </item>
    </layer-list>
  </item>
  <item android:state_selected="true">
    <!--butona basildiginda-->
    <layer-list>
      <item>
        <shape>
          <gradient android:angle="270" android:startColor="@color/colorGray" android:endColor="@color/colorGray"></gradient>
          <stroke android:width="1dp" android:color="#dfe6e9"></stroke>
          <corners android:radius="5dp"></corners>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>